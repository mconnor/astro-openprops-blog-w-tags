{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "esModuleInterop": false,
    "verbatimModuleSyntax": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "strictNullChecks": true,
    "strict": true
  },
  "include": [
    ".astro/types.d.ts",
    "**/*"
  ],
  "exclude": [
    "dist",
    ".astro",
    ".turbo",
    "cache-directory",
    "test/**/*"
  ]
}