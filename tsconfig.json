{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "rootDir": ".",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "strictNullChecks": true,
    "allowArbitraryExtensions": true,
    "verbatimModuleSyntax": true,
  },
  "include": [
    "."
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".astro",
    ".turbo",
    "cache-directory",
    "test/**/*"
  ]
}