{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "dist",
    "esModuleInterop": false,
    "verbatimModuleSyntax": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "strictNullChecks": true,
  },
  "exclude": [
    "dist",
    ".astro",
    ".turbo",
    ".vercel",
    "husky",
    "cache-directory",
    "test/**/*"
  ]
}