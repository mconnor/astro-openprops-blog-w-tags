{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "verbatimModuleSyntax": true,
    "experimentalDecorators": true, // default is false for TypeScript 5.0 and up
    "useDefineForClassFields": false, // default is true when "target" is "ES2022" or higher
    "declaration": true,
    "declarationMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@cc/*": ["src/astro-custom-layout-components/*"],
      "@wc/*": ["src/web-components/*"]
    }
  },
  "include": [
    "src/**/*.astro",
    "src/**/*.js",
    "src/**/*.ts",
    "src/**/*.tsx",
    "test/*.ts"
  ]
}
