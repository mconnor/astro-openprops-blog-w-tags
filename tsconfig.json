{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "esModuleInterop": false,
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "strict": true,
  },
  "files": [
    ".astro/types.d.ts",
    "jsx.d.ts"
  ],
  "include": [
    "src",
    "*.config.mjs",
    "types/*.d.ts"
  ],
  "exclude": [
    "dist",
    ".astro",
    ".turbo",
    "cache-directory",
    "test/**/*"
  ]
}