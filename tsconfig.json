{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "rootDir": "./src",
    "esModuleInterop": false,
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".astro",
    ".turbo",
    "cache-directory",
    "test/**/*"
  ]
}