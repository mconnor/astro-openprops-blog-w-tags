{
  "extends": "astro/tsconfigs/strict",
  "include": ["src"],
  "compilerOptions": {
    "verbatimModuleSyntax": true,
    "experimentalDecorators": true,
    "declaration": true,
    "useDefineForClassFields": false,
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@cc/*": ["src/astro-custom-layout-components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@content/*": ["src/content/*"],
      "@assets/*": ["src/assets/*"],
      "@styles/*": ["src/styles/*"],
      "@scripts/*": ["src/scripts/*"],
      "@wc/*": ["src/web-components/*"]
    }
  }
}
