{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "esModuleInterop": false,
    "experimentalDecorators": true,
    "useDefineForClassFields": false
  },
  "include": [
    "src",
    "*.config.*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".astro",
    ".turbo",
    "cache-directory",
    "test/**/*"
  ]
}