{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist", // i can leave comments
    "esModuleInterop": false,
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "strictNullChecks": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".astro",
    ".turbo",
    "cache-directory",
    "test/**/*"
  ]
}