{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": false,
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "strictNullChecks": true,
  },
  "include": [
    "src",
    "*.config.mjs",
    "types/*.d.ts"
  ],
  "exclude": [
    "dist",
    ".astro",
    ".turbo",
    "cache-directory",
    "test/**/*"
  ]
}