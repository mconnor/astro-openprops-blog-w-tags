{
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,
  "cssvar.files": [
    "./node_modules/open-props/open-props.min.css",
    "./node_modules/open-props/src/extra/*.css"
    // "src/astro-custom-layout-components/**/*.css",
    // "src/styles/theme.props.css",
    // "src/styles/utility-classes.css",
    // if you have an alternative path to where your styles are located
    // you can add it in this array of files
    // "assets/styles/variables.css"
  ],
  // Do not ignore node_modules css files, which is ignored by default
  "cssvar.ignore": [],
  "cssvar.themes": ["dark", "light"],
  "cssvar.postcssPlugins": [
    "postcss-html",
    "postcss-import",
    "postcss-jit-props",
    "postcss-nesting",
    "postcss-pow"
  ],
  // add support for autocomplete in JS or JS like files
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[astro][javascript][typescript][markdown]": {
    "editor.formatOnPaste": false,
    "editor.formatOnSave": true,
    "editor.formatOnType": false
  },
  "[json]": {
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.formatOnType": true
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "astro",
    "typescript",
    "typescriptreact",
    "css"
  ],
  "stylelint.validate": ["css", "html", "astro"],
  "typescript.inlayHints.parameterNames.enabled": "all",
  "editor.inlayHints.enabled": "off"
}
