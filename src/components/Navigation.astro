---
import type { HTMLAttributes } from 'astro/types'
---

<style>
    .nav-links {
        width: 100%;
        top: 5rem;
        /* left: 48px; */
        display: none;
        margin: 0;
        & a {
            color: var(--text-2);
            background-color: var(--brand);
            display: block;
            text-align: center;
            /* padding: 10px 0; */
            text-decoration: none;
            font-size: var(--font-size-2);
            font-weight: var(--font-weight-6);
            text-transform: uppercase;
            &:hover,
            &:focus {
                color: var(--red-6);
                background-color: var(--blue-1);
            }
        }

        @media screen and (min-width: 636px) {
            display: block;
            position: static;
            width: auto;
            /* background: none; */

            & a {
                display: inline-block;
                padding: 15px 20px;
                .dark {
                    color: #fff;
                }
            }
        }
    }
    .expanded {
        display: unset;
    }
</style>
<div class="nav-links">
    <a href="/">Home</a>
    <a href="/about/">About</a>
    <a href="/kitchensink/">Kitchen Sink</a>
    <a href="/blog/">Blog</a>
    <a href="/tags/">Tags</a>
</div>

