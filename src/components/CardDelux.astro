---
import { Box, Stack } from '@cc/index.js';

interface Props {
  // href?: string;
  num?: number;
  children: HTMLElement[];
}
const { num = 4 } = Astro.props as Props;
const className = `surface${num}`;
// import { Switcher, Stack, Box, Frame } from '@cc/index.js';
// const { href } = Astro.props;
---

<article class={className}>
  <Stack>
    <Box borderWidth="0" invert>
      <h2><slot name="headline" /></h2>
    </Box>
    <Box borderWidth="0">
      <h3><slot name="sub" /></h3>
    </Box>
    <Box borderWidth="0">
      <p><slot name="body" /></p>
    </Box>
  </Stack>
</article>

<style>
  article {
    border-radius: var(--radius-drawn-3);
    border: var(--border-size-4) solid var(--text-2);
  }
</style>

