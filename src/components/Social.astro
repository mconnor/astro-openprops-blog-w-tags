interface Props {
  username?: string;
  platform: 'twitter' | 'instagram' | 'github' | 'linkedin' | 'youtube';
}
const { platform, username = 'mconnor' } = Astro.props;
---

<Box borderWidth="0" padding="var(--s0)">
  <a href={`https://www.${platform}.com/${username}`}>
    <i class:list={['fa-brands', 'fa-2x', `fa-${platform}`]}></i>
  </a>
</Box>

