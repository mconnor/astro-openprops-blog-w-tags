---
import { getEntry } from 'astro:content';
import { Box, Stack, Frame, Cluster } from '@cc/index.js';
import { Debug } from 'astro:components';
// import type { HTMLAttributes } from 'astro/types';
import type { CollectionEntry } from 'astro:content';
import { format } from 'date-fns';
import { Image } from 'astro:assets';
import type { BlogSchemaType } from '../schemas.ts';
import CardTop from './CardTop.astro';

// interface Props extends HTMLAttributes<'a'> extends CollectionEntry<'blog'>.data;

type EntryType = CollectionEntry<'blog'>;

interface Props {
  slug: string;
}

// import { Switcher, Stack, Box, Frame } from '@cc/index.js';
const { slug } = Astro.props;

const blogdata = await getEntry('blog', slug);

const { title, pubDate, description, author, cover, tags }: BlogSchemaType =
  blogdata.data;

const authObj = await getEntry('authors', author.id);
---

<!-- <Debug {authObj} /> --><!-- <Debug {authObj} /> -->
<div class="card">
  <CardTop>
    <a slot="left" href={`/posts/${slug}`}><h3 class="truncate">{title}</h3></a>
    <a slot="right" href={`/writer/${authObj.id}`}>{authObj.data.name}</a>
  </CardTop>

  <div class="myMask">
    <Frame ratio="4:3">
      <Image src={cover.src} alt={cover.alt} width="1200" height="300" />
    </Frame>
  </div>

  <CardTop>
    <p slot="left">
      {description}
    </p>
    <p slot="right">{format(pubDate, 'MMMM dd, yyyy')}</p>
  </CardTop>
</div>

<style>
  .card {
    border-radius: var(--radius-drawn-3);
    border: var(--border-size-4) solid var(--text-2);
    padding: 0;

    /* &:hover {
      animation: var(--animation-shake-z);
    } */

    /* box-shadow: var(--shadow-2); */

    @media (--motionOK) {
      animation: var(--animation-fade-in);
    }
  }
  .myMask {
    -webkit-mask: var(--mask-edge-zig-zag-vertical);
