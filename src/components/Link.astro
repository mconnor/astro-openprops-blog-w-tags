---
import type { HTMLTag, Polymorphic } from 'astro/types'

type Props<Tag extends HTMLTag> = Polymorphic<{
    as: Tag
    isActive?: boolean
    class?: string
    activeClass?: string
    bgColor?: string
}>

const {
    as: Tag,
    isActive = false,
    activeClass = 'active',
    class: className = 'nav-link',
    href,
    ...rest
} = Astro.props

const path = Astro.url.pathname
---

<Tag href={href} class:list={[className, { active: path === href }]} {...rest}>
    <slot />
</Tag>
