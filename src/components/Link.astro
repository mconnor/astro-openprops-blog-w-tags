---
type Props = {
  path: string
  href: string
}

const { path, href } = Astro.props
---

<button class="blue">
  <a href={href}><slot /></a>
</button>

<style>
  button.blue {
    color: var(--blue-6);
    background-color: var(--blue-0);
    border: 1px solid var(--blue-1);
    text-shadow: 0 1px 0 var(--blue-2);

    &:hover {
      background-color: var(--blue-1);
    }
  }
</style>
