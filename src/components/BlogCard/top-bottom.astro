---
import { Cluster } from '@cc/index.js';
import LitBox from '@/lit-layout-components/Box/index.astro'
---

<LitBox borderWidth="0" padding="var(--s0)">
  <Cluster justify="space-between" align="baseline">
    <div class="truncate fb3">
      <slot name="left" />
    </div>
    <div class="fb1">
      <slot name="right" />
    </div>
  </Cluster></LitBox
>

<style>
  .truncate {
    /* white-space: nowrap; */
    overflow: hidden;
    text-overflow: ellipsis;
    flex-basis: 3;
  }
  .fb1 {
    flex-basis: 1;
  }
  .fb3 {
    flex-basis: 2;
  }
</style>
