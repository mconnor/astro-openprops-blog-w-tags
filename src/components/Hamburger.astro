---
type Props = Record<string, never>
---

<style>
    #menu__toggle {
        display: none;

        &:checked + .menu__btn {
            :is(span) {
                transform: rotate(45deg);
            }
            :is(span),
            ::before {
                top: 0;
                transform: rotate(0);
            }
            :is(span),
            ::after {
                top: 0;
                transform: rotate(90deg);
            }
        }
        @media (width< 630px) {
            display: none;
            &:checked ~ .menu__box {
                display: block;
            }
        }
    }

    .hamburger-menu {
        display: block;
        position: relative;
        & .menu__btn {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;

            background: var(--surface-4);

            width: var(--size-8);
            height: var(--size-8);
            user-select: none;

            :is(span),
            :is(span)::before,
            :is(span)::after {
                display: block;
                width: var(--size-5);
                height: var(--size-1);

                transition: transform 0.4s cubic-bezier(0.54, -0.81, 0.57, 0.57);
                content: '';
                background-color: var(--surface-1);
            }

            :is(span)::before,
            :is(span)::after {
                content: '';
                display: block;
                position: absolute;
            }

            :is(span)::before {
                top: 25%;
            }
            :is(span)::after {
                bottom: 25%;
            }
            @media (min-width: 630px) {
                display: none;
            }
        }

        & .menu__box {
            display: none;
            position: relative;
            width: 75%;
            box-shadow: var(--shadow-1);

            & li {
                list-style: none;
                border-width: var(--border-size-1);
                background-color: var(--surface-4);
                white-space: nowrap;
                & .menu__item {
                    color: var(--text-1);
                    text-decoration: none;

                    padding-left: var(--size-2);
                    @media (min-width: 630px) {
                        padding: var(--size-4) var(--size-4);
                    }
                }
                &:hover {
                    background-color: var(--surface-1);
                    cursor: pointer;
                }
            }
            @media (width>= 630px) {
                display: flex;
                flex-direction: row;
                position: static;

                /* background: none; */
            }
        }
    }
</style>

<div class="hamburger-menu">
    <input id="menu__toggle" type="checkbox" />
    <label class="menu__btn" for="menu__toggle">
        <span></span>
    </label>

    <ul class="menu__box">
        <li><a class="menu__item" href="/">Home</a></li>
        <li><a class="menu__item" href="/about/">About</a></li>
        <li><a class="menu__item" href="/kitchensink/">Kitchen Sink</a></li>
        <li><a class="menu__item" href="/blog/">Blog</a></li>
        <li><a class="menu__item" href="/tags/">Tags</a></li>
    </ul>
</div>
