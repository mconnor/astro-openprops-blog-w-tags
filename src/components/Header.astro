---
import Link from '@components/Link.astro';
import AstroThemeSwitcher from '@components/AstroThemeSwitcher.astro';
import { Switcher, Box } from '@cc/index.js';
---

<header>
  <Box borderWidth="var(--s00)" padding="var(--s00)">
    <Box padding="var(--s000)"><AstroThemeSwitcher /></Box>

    <Switcher limit={6} space="var(--s1)">
      <Link href="/">Home</Link>
      <Link href="/about/">About</Link>
      <Link href="/icons/">Icons</Link>
      <Link href="/kitchensink/">Kitchen Sink</Link>
      <Link href="/blog/">Blog</Link>
      <Link href="/tags/">Tags</Link>
    </Switcher>
  </Box>
</header>
