---
import { Cluster } from '@cc/index.ts';

import HeaderFooterWrapper from '@/components/header-footer.astro';
import Social from '@/components/Social.astro';

const ICONSIZE = 50;
---

<HeaderFooterWrapper transition:persist>
  <Cluster justify="space-around">
    <Social
      name="logos/twitter"
      href="https://www.twitter.com/mikeconnor504"
      size={ICONSIZE}
    />
    <Social
      name="logos/linkedin"
      href="https://www.linkedin.com/michaelgconnor"
      size={ICONSIZE}
    />
    <Social
      name="logos/github"
      href="https://www.github.com/mconnor"
      size={ICONSIZE}
    />
    <Social name="mdi:account" href="./" size={ICONSIZE} />
  </Cluster>
</HeaderFooterWrapper>
