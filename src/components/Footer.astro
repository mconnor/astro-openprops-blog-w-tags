---
import { Cluster } from '@cc/index.ts';

import HeaderFooterWrapper from '@/components/header-footer.astro';
import Social from '@/components/Social.astro';

const ICONSIZE = 50;
---

<HeaderFooterWrapper transition:persist>
  <Cluster justify="space-around">
    <Social name="logos/twitter" domain="twitter.com" size={ICONSIZE} />
    <Social name="logos/linkedin" domain="linkedin.com" size={ICONSIZE} />
    <Social name="logos/github" domain="github.com" size={ICONSIZE} />
  </Cluster>
</HeaderFooterWrapper>
