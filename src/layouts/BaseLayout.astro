        .h1,
        h2,
        .h2,
        h3,
        .h3,
        h4,
        .h4,
        h5,
        .h5,
        h6,
        .h6 {
            /* margin-top: var(--size-7);
            margin-bottom: var(--size-3);
            font-weight: var(--font-weight-7);
            line-height: var(--size-3); */
