---
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
// import '../styles/global.css'

/* the props */
import 'open-props/style'

/* optional imports that use the props */
import 'open-props/normalize'
import 'open-props/buttons'

/* just light or dark themes */
import 'open-props/normalize/dark'
import 'open-props/buttons/dark'
import 'open-props/normalize/light'
import 'open-props/buttons/light'

import 'open-props/shadow/shadows'

interface Props {
    pageTitle: string
}
const { pageTitle } = Astro.props
---

<style>
    html {
        background-color: var(--stone-1);
        font-family: var(--font-sans);
        line-height: var(--font-lineheight-3);
        @media screen and (min-width: 636px) {
            & .dark {
                background-color: #0d0950;
                color: #fff;
            }
        }
    }

    body {
        margin: 0 auto;
        width: 100%;
        max-width: 80ch;
        padding: var(--size-fluid-1);
        line-height: var(--font-lineheight-3);
        :is(h1) {
            margin: var(--size-fluid-1) 0;
            font-size: var(--font-size-fluid-3);
            color: purple;
        }
        :is(h2) {
            margin: var(--size-fluid-1) 0;
            font-size: var(--font-size-fluid-1);
            color: var(--green-1);
        }

        .button-class {
            border-radius: var(--radius-3);
            padding: var(--size-4) var(--size-8);
            box-shadow: var(--shadow-6);
            text-decoration: none;
            cursor: pointer;
            .blue & {
                color: var(--blue-6);
                background-color: var(--blue-0);
                border: 1px solid var(--blue-1);
                text-shadow: 0 1px 0 var(--blue-2);

                &:hover {
                    background-color: var(--blue-1);
                }
            }
        }
    }
</style>

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <title>{pageTitle}</title>
    </head>
    <body class="body-class">
        <Header />
        <h1>{pageTitle}</h1>
        <div>
            <slot />
        </div>
        <Footer />
        <script>
            import '../scripts/menu.js'
        </script>
    </body>
</html>
