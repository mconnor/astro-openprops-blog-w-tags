---
import BaseHead from '@components/BaseHead.astro'
// import Header from '@components/Header.astro'
import Footer from '@components/Footer.astro'
import Hamburger from '@components/Hamburger.astro'
interface Props {
    pageTitle: string
    description?: string
    image?: string
    surfaceClass?: 'surface-1' | 'surface-2' | 'surface-3' | 'surface-4'
    children: any
}

// const isProd = import.meta.env.PROD
// const isDev = import.meta.env.DEV

const {
    pageTitle,
    description = 'my description',
    image = '/placeholder-social.jpg',
    surfaceClass = 'surface-2',
} = Astro.props
---

<html lang="en">
    <head>
        <BaseHead title={pageTitle} description={description} image={image} />
    </head>

    <body class:list={[surfaceClass, 'center-self']}>
        <Hamburger class="header" />
        <!-- <Header class:list={['header']} /> -->
        <h1 class="pageHeadline" transition:animate="fade">{pageTitle}</h1>
        <main class="mainClass">
            <slot transition:animate="none" />
        </main>
        <Footer class:list={['footer']} />

        <style>
            body {
                grid-template-rows: auto;
                grid-template-areas:
                    'header header header '
                    '.  headline .'
                    '. main . '
                    'footer footer footer';
            }

            .pageHeadline {
                grid-area: headline;
            }

            .mainClass {
                grid-area: main;
                border: var(--border-size-2) solid var(--brand);
            }
            .center-self {
                align-self: center;
            }
            .devborder {
                border: var(--border-size-2) solid var(--brand);
            }

            .type-1 {
                font-size: var(--font-size-4);
                font-weight: var(--font-weight-3);
                line-height: var(--line-height-1);
            }

            .header {
                grid-area: header;
            }
            .footer {
                grid-area: footer;
            }

            h1 {
                font-weight: var(--font-weight-9);
            }
        </style>
    </body>
</html>
