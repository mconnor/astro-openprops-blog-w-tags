---
// import { z } from 'astro:content';
import BaseHead from '@/components/BaseHead.astro';

import { Cover, Center } from '@cc/index.ts';
import type { RmUnitType } from '@cc/Types.ts';

import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
// import SpeedInsights from '@vercel/speed-insights/astro';

interface Props {
  title?: string;
  description?: string;
  image?: string;
  maxW?: RmUnitType;
  children: unknown;
}

// const isProd = import.meta.env.PROD
// const isDev = import.meta.env.DEV

const {
  title = 'Mike Connor',
  description = 'my description',
  image = '/placeholder-social.jpg',
  maxW = 'var(--measure)',
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<html lang="en" transition:animate="none" data-theme="light">
  <head>
    <BaseHead title={title} description={description} image={image} />
    <link rel="canonical" href={canonicalURL} />
  </head>

  <body>
    <Cover centeredElement="center-l" space="0">
      <Header transition:persist />

      <Center max={maxW}><slot /></Center>
      <Footer />
    </Cover>
    <style>
      body {
        background-color: var(--surface-1);
      }
      /* .wrap-center {
        background-color: var(--g-bg-color);
        color: var(--g-fg-color);
      } */
    </style>

    <script is:inline>
      // import { $currTheme } from '../store/currTheme.ts';

      // on page, get the last theme from the cookie and set it
      document.addEventListener('astro:page-load', () => {
        const storedTheme = localStorage.getItem('theme');
        if (storedTheme) {
          document.documentElement.setAttribute('data-theme', storedTheme);
          // $currTheme.set(storedTheme);
        } else {
          document.documentElement.setAttribute('data-theme', 'light');
        }
        lucide.createIcons();
        // console.log('theme set to', storedTheme);
      });
    </script>
  </body>
</html>
