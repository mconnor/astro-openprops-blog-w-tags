<style is:global>
  @import url('open-props/postcss/buttons') layer(design.extras);
  @import url('open-props/postcss/normalize') layer(design.reset);
  @import url('./modular-scale.css') layer(myprops.modular);
  @import url('./utility-classes.css') layer(utilities);
  @import url('./typography.css') layer(typography);

  /* --surface-2-dark: var(--gray-11); */
  @import url('./theme-props.css') layer(theme);

  @layer design {
    @layer system, extras, reset;
  }

  @layer myprops {
    @layer modular, utils;
  }

  /* .surface1 
  .test2 */
