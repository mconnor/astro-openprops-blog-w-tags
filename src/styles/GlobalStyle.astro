  :root {
    --color-light: var(--gray-3);
    --color-dark: var(--gray-12);
  }

  .gradient-text {
    background: var(--gradient-1);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  @layer design ,myprops , typography;
</style>
