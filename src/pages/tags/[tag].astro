---
// import { Debug } from 'astro:components';
import Layout from '@/layouts/BaseLayout.astro';
import BlogCard from '@/components/BlogCard/index.astro';
import { Box, Stack } from '@cc/index.js';
import { getCollection } from 'astro:content';

// import type { CollectionEntry } from 'astro:content'

export const prerender = true;

export const getStaticPaths = async () => {
  const publishsedPosts = await getCollection(
    'blog',
    ({ data }) => data.draft !== true,
  );

  const uniqueTags = [
    ...new Set(publishsedPosts.map(({ data }) => data?.tags || []).flat()),
  ];

  return uniqueTags.map((tag) => {
    return {
      params: { tag },
      props: {
        posts: publishsedPosts.filter(({ data }) => data.tags.includes(tag)),
      },
    };
  });
};

const { tag } = Astro.params;
const { posts } = Astro.props;
---

<Layout title={tag as string}>
  <!-- <Debug {tag} />
  <Debug {posts} /> -->
  <Stack space="var(--s1)">
    <Box><h2>#{tag}</h2></Box>
    {posts.map(({ slug }) => <BlogCard slug={slug} />)}
  </Stack>
  <!-- <TitleDate posts={posts} /> -->
</Layout>
