---
import { getCollection } from 'astro:content';
// import { authorSchema } from '@/schemas/idex.js';
import { Stack } from '@cc/index.ts';
import { Box } from '@/lit-layout-components/index.ts';

import Layout from '@/layouts/BaseLayout.astro';

const authors = await getCollection('authors');
---

<Layout title="authors">
  <!-- <Debug {tag} />
    <Debug {posts} /> -->
  <Stack space="var(--s1)">
    <Box><h2>authors</h2></Box>

    {
      authors.map(({ data }) => (
        <Box>
          <a href={`/authors/${data.id}`}>{data.name}</a>
        </Box>
      ))
    }
  </Stack>
</Layout>
