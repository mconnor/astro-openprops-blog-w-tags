import { getCollection } from 'astro:content';

export const prerender = true;

export async function getStaticPaths() {
  const posts = await getCollection('blog');

  return posts.map((entry) => {
    return {
      params: { slug: entry.slug },
      props: { entry },
    };
  });
}

