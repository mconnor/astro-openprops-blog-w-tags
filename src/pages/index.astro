---
import AstroNavigateSelect from '@components/AstroNavigateSelect.astro'

import BaseLayout from '@layouts/BaseLayout.astro'
import { LitHeartButton } from '@wc/LitHeartButton'
import { MyElement } from '@components/my-element.js'
import { Box, Stack } from '@cc/index'
---

<BaseLayout pageTitle="home">
  <div class="myLayoutColors">
    <!-- <button onclick="throw new Error('This is a test error')">
    Throw test error
  </button> -->
    <Box borderWidth="0" padding="0">
      <Box invert><h1>home</h1></Box>
      <Box
        ><p>
          Lorem ipsum dolor sit amet consectetur adipisicing elit. Doloribus
          quam non eaque sapiente, inventore rem facere cum minima, tempora in
          accusamus voluptatum nobis, delectus eius itaque accusantium. Odio,
          maiores fugit.
        </p>
      </Box>

      <Box
        ><Box invert borderWidth="2px">
          <h2>inverted box</h2>
        </Box></Box
      >

      <Box borderWidth="2px"> <LitHeartButton client:only="lit" /></Box>
      <Box borderWidth="2px"> <MyElement client:only="lit" /></Box>
      <Box invert borderWidth="2px"> <AstroNavigateSelect /></Box>
    </Box>
  </div>
</BaseLayout>
<style>
  .myLayoutColor {
    color: var(--color-dark);
    background-color: var(--color-light);
  }

  .skill {
    font-weight: var(--font-weight-7);
    text-transform: var(--textCase);
    /* color: var(--accent); */
  }
</style>
