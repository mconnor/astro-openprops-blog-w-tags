---
// import AstroNavigateSelect from '@components/AstroNavigateSelect.astro'

import BaseLayout from '@layouts/BaseLayout.astro'
import { LitHeartButton } from '@wc/LitHeartButton'
import { MyElement } from '@components/my-element.js'
import { Box, Stack } from '@cc/index'
---

<BaseLayout pageTitle="home">
  <Stack recursive>
    <Box borderWidth="2px"><LitHeartButton client:only="lit" /></Box>
    <Box borderWidth="2px"><MyElement client:only="lit" /></Box>
    <Box borderWidth="2px" invert><MyElement client:only="lit" /></Box>
    <!-- <Box><AstroNavigateSelect client:visible /></Box> -->
  </Stack>
  <style>
    .myLayoutColor {
      color: var(--color-dark);
      background-color: var(--color-light);
    }

    .skill {
      font-weight: var(--font-weight-7);
      text-transform: var(--textCase);
      /* color: var(--accent); */
    }
  </style>
</BaseLayout>
